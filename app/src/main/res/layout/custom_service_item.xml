<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="76dp"
    android:layout_height="112dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/service_item_background">

    <androidx.cardview.widget.CardView
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="12dp"
        android:id="@+id/cv_service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clipToPadding="true"
        android:outlineAmbientShadowColor="@color/baseBackgroundColor"
        android:outlineSpotShadowColor="@color/entered_digit_color"
        app:cardBackgroundColor="@color/baseBackgroundColor"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        app:cardElevation="16dp"
        tools:targetApi="p">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:id="@+id/iv_service_icon"
            android:layout_margin="19dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/statistics" />

    </androidx.cardview.widget.CardView>

    <com.example.scrollbar.my_components.MediumTextView
        android:id="@+id/tv_title_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="2dp"
        android:gravity="center"
        android:text="საგადასახადო ინსტრუმენტები"
        android:textColor="@color/black"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="@+id/cv_service"
        app:layout_constraintStart_toStartOf="@+id/cv_service"
        app:layout_constraintTop_toBottomOf="@+id/cv_service"
        tools:ignore="SmallSp" />


</androidx.constraintlayout.widget.ConstraintLayout>